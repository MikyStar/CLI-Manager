{
	"name": "cli-manager",
	"version": "0.1.0",
	"description": "Providing an easy and usefull Command Line Interface for managing tasks with local files",
	"keywords": [
		"cli",
		"tasks",
		"management"
	],
	"author": "Mike AUBENAS",
	"license": "ISC",
	"main": "Main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/MikyStar/CLI-Manager"
	},
	"scripts": {
		"start": "NODE_ENV=dev npm run tsc && node dist/Main.js",
		"tsc": "tsc",
		"test": "echo 'No jest tests written yet'",
		"security:audit": "npm audit --production --audit-level=moderate --registry=https://registry.npmjs.org",
		"security:fix": "npm audit fix --production --audit-level=moderate --registry=https://registry.npmjs.org",
		"dependencies:check": "ncu -e 2",
		"dependencies:update": "ncu -u && npm run clear && npm install && npm run test",
		"build": "webpack-cli",
		"clear": "rm -rf node_modules dist"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"jest": "^26.6.3",
		"ts-jest": "^26.4.4",
		"tslint": "^5.20.1",
		"typescript": "^4.0.5"
	},
	"dependencies": {
		"@types/chalk": "^2.2.0",
		"@types/moment": "^2.13.0",
		"@types/prompts": "^2.0.9",
		"chalk": "^4.1.0",
		"dotenv": "^8.2.0",
		"moment": "^2.29.1",
		"prompts": "^2.4.0",
		"ts-loader": "^9.2.4",
		"ts-node": "^9.0.0",
		"webpack": "^5.46.0",
		"webpack-cli": "^4.7.2",
		"webpack-node-externals": "^3.0.0"
	}
}
