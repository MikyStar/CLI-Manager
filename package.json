{
	"name": "cli-task-manager",
	"version": "0.1.2",
	"description": "Providing an easy and usefull command line interface for managing tasks with local files",
	"keywords": [
		"cli",
		"tasks",
		"management"
	],
	"author": "Mike AUBENAS",
	"license": "ISC",
	"bin": {
		"task": "./bin/cli.js"
	},
	"files": [
		"src",
		"bin/cli.js"
	],
	"main": "src/Main.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/MikyStar/CLI-Manager"
	},
	"scripts": {
		"start": "NODE_ENV=dev npm run tsc && node dist/Main.js",
		"tsc": "tsc",
		"test": "echo 'No jest tests written yet'",

		"binary": "./scripts/make-binary.sh",

		"security:audit": "npm audit --production --audit-level=moderate --registry=https://registry.npmjs.org",
		"security:fix": "npm audit fix --production --audit-level=moderate --registry=https://registry.npmjs.org",

		"dependencies:check": "ncu -e 2",
		"dependencies:update": "ncu -u && npm run clear && npm install && npm run test",

		"build": "NODE_OPTIONS=--openssl-legacy-provider webpack-cli",
		"clear": "rm -rf node_modules dist build bin"
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"jest": "^27.4.7",
		"ts-jest": "^27.1.2",
		"tslint": "^5.20.1",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"@types/prompts": "^2.0.14",
		"chalk": "^4.1.0",
		"dotenv": "^11.0.0",
		"moment": "^2.29.1",
		"prompts": "^2.4.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"webpack-node-externals": "^3.0.0"
	}
}
